@using Syncfusion.EJ2;
@{
    ViewBag.Title = "newmail";
}

<div class="toolbar-parent-newmail">
    <div style='width:100%;height:40px;'>
        <div>
            @Html.EJS().Toolbar("toolbar_newmail").Items(ViewBag.tbNewMailItems).OverflowMode(Syncfusion.EJ2.Navigations.OverflowMode.Popup).Render()
        </div>
    </div>
</div>
<div class="mail-content-div customScrollBar">
    <div class="mail-id" style="color: white">
        @Html.EJS().Button("btnTo").Content("To").Render()
        <input type='text' id='autoTo' />
    </div>
    <div class="mail-id" style="color: white">
        @Html.EJS().Button("btnCc").Content("Cc").Render()
        <input type='text' id='autoCc' />
    </div>
    <div class="mail-subject e-input-group">
        <input type='text' id='txtSubject' style="width: 100%" placeholder="Enter Subject Here" class="e-input" />
    </div>
    <div>
        <div id='mailContentMessage' class="customScrollBar" contenteditable="true"></div>
    </div>
    <div class='mail-text-edit-tb-parent'>
        @Html.EJS().Toolbar("new_email_toolbar").Height("100%").Width("100%").Items(ViewBag.toolbarItems).Render()
    </div>
    <div>
        @Html.EJS().Button("btnSend").Content("Send").Render()
        @Html.EJS().Button("btnDiscard").Content("Discard").Render()
    </div>
</div>
@Html.EJS().ScriptManager()
<style>
    #btnTo, #btnCc {
        width: 50px;
        float: left;
    }

    #btnSend {
        margin: 8px 0px;
        background-color: #0078D7;
        color: #fff;
    }

    #btnDiscard {
        margin: 8px 0px;
    }
</style>


